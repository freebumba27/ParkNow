<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewBookingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/booking_title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyRateTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/hourly_rate_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextHourlyRateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyAddressTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/address_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextHourlyAddressValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyDescTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/placeDescTitle"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextHourlyDescValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyBookingFromDateTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/booking_date_from_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextBookingFromDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txtbox"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/booking_date_hint"
                android:onClick="datePicker"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyBookingFromTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/booking_from_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextBookingFromValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txtbox"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/booking_from_to_hint"
                android:onClick="timePickerStartingRental"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyBookingToDateTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/booking_date_to_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextBookingToDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txtbox"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/booking_date_hint"
                android:onClick="datePicker"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyBookingToTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/booking_upto_title"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextBookingToValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txtbox"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/booking_from_to_hint"
                android:onClick="timePickerStartingRental"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/editTextHourlyTotalTitle"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/total_desc"
                android:textColor="@color/red_text_colour"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editTextTotalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text_colour"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:onClick="goingToPay"
            android:src="@drawable/paypal_button"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TextViewReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/review"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/ListViewReview"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</ScrollView><!-- From: file:/E:/Anirban/Projects/my_workspace/ready_prototypes/ParkNow1/app/src/main/res/layout/choose_duration.xml -->